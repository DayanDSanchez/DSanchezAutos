@model ML.Auto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>
@Html.ActionLink("+ Agregar", "Form", "Auto", new { @class = "btn btn-success" })

@if (Model.Autos != null)
{
    <table class="table table-dark table-striped">
        <tr>
            <th>Editar</th>
            <th>Id Auto</th>
            <th>Color</th>
            <th>Asientos</th>
            <th>Puertas</th>
            <th>Version</th>
            <th>Modelo</th>
            <th>Marca</th>
            <th>Eliminar</th>
        </tr>
        @foreach (ML.Auto auto in Model.Autos)
        {
            <tr>
                <td><a href="@Url.Action("","")" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a></td>
                <td>@auto.IdAuto</td>
                <td>@auto.Color</td>
                <td>@auto.Asientos</td>
                <td>@auto.Puertas</td>
                <td>@auto.Version.Nombre</td>
                <td>@auto.Version.Modelo.Nombre</td>
                <td>@auto.Version.Modelo.Marca.Nombre</td>
                <td><a href="@Url.Action("","" )" onclick="return confirm('Estas seguro que quieres eliminar esta materia?')" class="btn btn-danger"><i class="bi bi-trash"></i></a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        No hay registros
    </div>
}
